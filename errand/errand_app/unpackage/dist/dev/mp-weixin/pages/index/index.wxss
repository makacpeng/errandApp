.layout .banner {
  width: 700rpx;
  margin: 0 auto;
  margin-top: 30rpx;
}
.layout .func {
  background-color: rgba(255, 255, 255, 0);
  width: 700rpx;
  height: 380rpx;
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 0;
  padding: 0;
  margin: 0 auto;
  text-align: center;
  font-size: 36rpx;
}
.layout .func .big {
  z-index: 1;
  grid-column: 1/1;
  grid-row: 1/3;
  background-color: #fff;
  border-radius: 15rpx;
  position: relative;
  display: flex;
  flex-flow: column;
  justify-content: center;
  align-items: center;
}
.layout .func .big image {
  height: 250rpx;
  width: 250rpx;
}
.layout .func .big::after {
  z-index: 2;
  content: "";
  position: absolute;
  height: 355rpx;
  width: 0;
  border: 1rpx dashed #f8cbc7;
  right: 0;
  top: 15rpx;
}
.layout .func .small1, .layout .func .small2 {
  position: relative;
  background: #fff;
  border-radius: 15rpx;
  display: flex;
  flex-flow: column;
  justify-content: center;
  align-items: center;
}
.layout .func .small1 image, .layout .func .small2 image {
  height: 120rpx;
  width: 120rpx;
}
.layout .func .small1::after {
  content: "";
  position: absolute;
  width: 325rpx;
  height: 0;
  border: 1rpx dashed #f8cbc7;
  bottom: 0;
  left: 0rpx;
}
.layout .box1 {
  background: transparent;
  width: 700rpx;
  height: 150rpx;
  margin: 0 auto;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
  display: grid;
  grid-template-columns: repeat(2, 1fr);
}
.layout .box1 .flower, .layout .box1 .more {
  position: relative;
  display: flex;
  align-items: center;
  border-radius: 15rpx;
  background-color: #fff;
}
.layout .box1 .flower image, .layout .box1 .more image {
  width: 180rpx;
  height: 150rpx;
}
.layout .box1 .flower::after {
  content: "";
  position: absolute;
  height: 120rpx;
  width: 0;
  border: 1rpx dashed #f8cbc7;
  right: 0;
}
.layout .box2 {
  box-sizing: border-box;
  width: 700rpx;
  margin: 0 auto;
  background-color: #fff;
  padding: 20rpx;
  border-radius: 10rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

